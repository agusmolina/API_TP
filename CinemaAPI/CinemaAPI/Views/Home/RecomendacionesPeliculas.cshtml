@using CinemaAPI.Models;
@model List<Pelicula>
@{
    var usuarioNombre = ViewBag.user;
}


<div class="row" style="padding-bottom:30px; padding-right:20px;padding-left:20px; border-radius:10px; background-color:white">
    <div class="col-12">
        <div class="row">
            <h4 style="font-weight:bold; font-family: 'Exo', sans-serif;padding-top:30px;padding-bottom:20px; padding-left:20px; text-align:center">RECOMENDACIONES PARA: @usuarioNombre</h4>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-auto" style="padding-top:15px">
                    <a href="@Url.Action("DetallePelicula","Home", new { id = @item._id })"><img src="@item.Imagen" width="220" height="260" style="border-radius:10px; cursor:pointer" /></a>
                </div>
            }
        </div>
    </div>
</div>


